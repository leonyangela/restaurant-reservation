<% include ../partials/header %>

    <div class="section-detail-product">
        <h1 class="detail-product__heading"><%= product.name %></h1>

        <img class="detail-product__image" src="<%= product.image %>">

        <div class="detail-product__desc">
            <p class="product-desc__desc"><%= product.description %></p>
            <p class="product-desc__price">$ <%= product.price %></p>
            
            <div class="detail-product__button-box">
                <div class="detail-product__button-box--left">
                    <form action="/shops/add-product" method="GET">
                        <button class="button-primary btn--animated">Add Product</button>
                    </form>
                </div>
                
                <div class="detail-product__button-box--center">
                    <form action="/shops/product-details/<%= product._id %>/edit" method="GET">
                        <button class="button-primary btn--animated">Edit Product</button>
                    </form>
                </div>

                <div class="detail-product__button-box--right">
                    <form action="/shops/product-details/<%= product._id %>?_method=DELETE" method="POST">
                        <button class="button-primary btn--animated">Delete Product</button>
                    </form>
                </div>
                
            </div>
        </div>
     
    </div>
   


    
    

<% include ../partials/footer %>