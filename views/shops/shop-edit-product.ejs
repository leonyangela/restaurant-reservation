<% include ../partials/header %>
    
<div class="section-form">
    <div class="row">
        <h1 class="heading-form">Update product</h1>

        <div class="form">
            <div class="form__box">
                <div class="form__box--left">
                    <form action="/shops/product-details/<%= product._id %>?_method=PUT" method="POST">
                        <div class="form__group">
                            <label for="name" name="name" class="form__box__label">Name: </label>
                            <input type="text" name="product[name]" value="<%= product.name %>" class="form__box__input" required>
                        </div>
                        
                        <div class="form__group">
                            <label for="price" name="price" class="form__box__label">Price: </label>
                            <input type="number" name="product[price]" value="<%= product.price %>" class="form__box__input" required>    
                        </div>
                      
                        <div class="form__group">
                            <label for="image" name="image" class="form__box__label">Image: </label>
                            <input type="text" name="product[image]" value="<%= product.image %>"class="form__box__input" >
                        </div>
                       
                        <div class="form__group">
                            <label for="description" name="description" class="form__box__label">Description: </label>   
                            <input type="textarea" name="product[description]" value="<%= product.description %>" class="form__box__input" required>
                        </div>
                       
                        <div class="form__group">
                            <button class="button-primary btn--animated">Submit</button>
                        </div>
                    </form>
                </div>

                <div class="form__box--right">
                    &nbsp;
                </div>
            </div>
        </div>
    </div>
</div>


<% include ../partials/footer %>