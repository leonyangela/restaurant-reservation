<% include ../partials/header %>

    <div class="section-form">
       <div class="row">
            <div class="form__box">
                <h1 class="heading-form">Add Product</h1>       

                <form action="/shops/add-product" method="POST">
                    <div class="form__group">
                        <label for="name" name="name" class="form__label">Name: </label>
                        <input type="text" name="name" class="form__input" placeholder="Coffee Bottle" required>
                    </div>
        
                    <div class="form__group">
                        <label for="price" name="price" class="form__label">Price: </label>
                        <input type="number" name="price" class="form" placeholder="Price" min="0.50" step="0.01" required>
                    </div>
        
                    <div class="form__group">
                        <label for="image" name="image" class="form__label">Image: </label>
                        <input class="form-control" type="text" name="image" class="form" placeholder="Image url">
                    </div>
        
                    <div class="form__group">
                        <label for="description" name="description" class="form__label">Description: </label>   
                        <input type="textarea" name="description" class="form" placeholder="Description" required>
                    </div>
        
                    <div class="form__group">
                        <button>Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    

<% include ../partials/footer %>