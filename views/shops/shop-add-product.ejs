<% include ../partials/header %>

    <form action="/shops/add-product" method="POST">
        <label for="name" name="name">Name: </label>
        <input type="text" name="name" placeholder="Latte Americano" required>

        <label for="price" name="price">Price: </label>
        <input type="number" name="price" placeholder="Price" min="0.50" step="0.01" required>

        <label for="image" name="image">Image: </label>
        <input class="form-control" type="text" name="image" placeholder="Image url">

        <label for="description" name="description">Description: </label>   
        <input type="textarea" name="description" placeholder="Description" required>

        <button>Submit</button>
    </form>

<% include ../partials/footer %>