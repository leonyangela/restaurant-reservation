<% include ../partials/header %>

    <div class="section-form">
       <div class="row">
            <h1 class="heading-form">Add Product</h1> 
            <div class="form">
                <div class="form__box">
                    <div class="form__box--left">
                        <form action="/shops/add-product" method="POST">
                            <div class="form__group">
                                <label for="name" name="name" class="form__box__label">Name: </label>
                                <input type="text" name="name" class="form__box__input" placeholder="Coffee Bottle" required>
                            </div>
                
                            <div class="form__group">
                                <label for="price" name="price" class="form__box__label">Price: </label>
                                <input type="number" name="price" class="form__box__input" placeholder="Price" min="0.50" step="0.01" required>
                            </div>
                
                            <div class="form__group">
                                <label for="image" name="image" class="form__box__label">Image: </label>
                                <input type="text" name="image" class="form__box__input" placeholder="/images/product-name.jpg">
                            </div>
                
                            <div class="form__group">
                                <label for="description" name="description" class="form__box__label">Description: </label>   
                                <input type="textarea" name="description" class="form__box__input" placeholder="Description" max="300" required>
                            </div>
                
                            <div class="form__group">
                                <button class="button-primary btn--animated">Submit</button>
                            </div>
                        </form>
                    </div>
    
                    <div class="form__box--right">
                        &nbsp;
                    </div>
                </div>
            </div>
        </div>
    </div>
    

<% include ../partials/footer %>